<h1>New Game</h1>
<%= @letters %>
<p>What is the longest word you can find?</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :array, @letters %>
  <div class="search">
    <input type="text" name="word" placeholder="longest word">
    <button type="submit" class="button">Play</button>
  </div>

</form>
